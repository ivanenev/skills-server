{
  "name": "@skills-server/mcp",
  "version": "0.3.0",
  "description": "Enhanced MCP server with progressive disclosure for token-efficient skill libraries and lazy-mcp bridge integration",
  "private": false,
  "type": "module",
  "bin": {
    "skills-server": "build/index.js"
  },
  "files": [
    "build",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && node -e \"import('fs').then(fs => fs.default.chmodSync('build/index.js', 0o755))\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "prepublishOnly": "npm run build && npm test",
    "test": "node simple-test.js",
    "test:all": "node test_runner.js",
    "test:performance": "node test-comparison.js",
    "test:progressive": "node test-progressive-disclosure.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "fs-extra": "^11.3.2",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "skills",
    "prompts",
    "ai",
    "llm",
    "efficiency",
    "token-optimization"
  ],
  "author": "Skills Server Team",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ivanenev/skills-server.git"
  },
  "homepage": "https://github.com/ivanenev/skills-server#readme",
  "bugs": {
    "url": "https://github.com/ivanenev/skills-server/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ]
}
